<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <welcome-file-list>
        <welcome-file>display.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>checkServlet</servlet-name>
        <servlet-class>database.CheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>attentionCheck</servlet-name>
        <servlet-class>database.AttentionCheck</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>attentionCheck</servlet-name>
        <url-pattern>/attentionCheck</url-pattern>
    </servlet-mapping>

</web-app>